<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailScreenActivity">


    <RelativeLayout

        android:id="@+id/relative_reminder"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/detail_rectangle_shape">

        <TextView
            android:id="@+id/txtReminderdetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="300"
            android:padding="2dp"
            android:text="This is my first notes"
            android:textAlignment="viewStart"
            android:textSize="18sp"></TextView>
        <TextView

            android:id="@+id/txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="300"
            android:padding="2dp"
            android:layout_below="@id/txtReminderdetails"
            android:text="This is my first notes"
            android:textAlignment="viewStart"
            android:textSize="18sp"></TextView>

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnReminderEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/detail_rectangle_shape"
                android:text="Edit"
                android:textAllCaps="false"
                android:textSize="18sp"></Button>

            <Button
                android:id="@+id/btnReminderDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/detail_rectangle_shape"
                android:text="Delete"
                android:textAllCaps="false"
                android:textSize="18sp"></Button>


        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/btnshowallreminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/detail_rectangle_shape"
            android:text="Show All Reminder">


        </Button>

    </RelativeLayout>


</RelativeLayout>